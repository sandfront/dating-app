<div class="navbar-meteor <%= 'navbar-transparent' if params[:controller] == 'pages' && params[:action] == 'home' %>">
  <!-- Dropdown list appearing on mobile only LEFT icon-->
  <% if user_signed_in? %>
  <div class="navbar-meteor-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="material-icons" data-toggle="dropdown">menu</i>
      <ul class="dropdown-menu dropdown-menu-left navbar-meteor-dropdown-menu">
        <li><%= link_to "Profile", edit_profile_path(current_user.id) %> </li>
        <li><%= link_to destroy_user_session_path, method: :delete do %>
          <%= t(".sign_out", default: "Log out") %>
        <% end %></li>
      </ul>
    </div>
  </div>
  <!-- Dropdown list appearing on desktop only LEFT avatar-->
  <div class="navbar-meteor-item hidden-xs hidden-sm">
    <div class="dropdown">
     <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar dropdown-toggle" data-toggle="dropdown">
      <ul class="dropdown-menu dropdown-menu-left navbar-meteor-dropdown-menu">
        <li><%= link_to "Profile", profile_path(current_user.id) %> </li>
        <li><%= link_to destroy_user_session_path, method: :delete do %>
          <%= t(".sign_out", default: "Log out") %>
        <% end %></li>
      </ul>
    </div>
  </div>
  <% end %>

  <!-- Logo and name CENTER -->
  <%= link_to root_path, class: "navbar-brand" do %>
    <p><%= image_tag "comet.png" %> Meteor</p>
  <% end %>

  <!-- Links when logged in to messages desktop RIGHT text -->
  <div class="navbar-meteor-center hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <%= link_to "messages", "#", class: "navbar-meteor-item navbar-meteor-link" %>
    <% else %>
      <!-- Login link (when logged out) -->
      <% devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "login", omniauth_authorize_path(resource_name, provider), class: "navbar-meteor-item navbar-meteor-link"%>
        <% end -%>
      <% end -%>
    </div>

  <!-- Links when logged in to messages mobile RIGHT icon -->
  <div class="navbar-meteor-right hidden-md hidden-lg">
    <% if user_signed_in? %>
    <a href="#" class="navbar-meteor-item navbar-meteor-link"><i class="material-icons">chat</i></a>
    <% else %>
    <!-- Login link (when logged out) -->

      <% devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "login", omniauth_authorize_path(resource_name, provider), class: "navbar-meteor-item navbar-meteor-link"%>
        <% end %>
      <% end %>

  </div>

  <!-- NAVBAR ON MESSAGE SHOW -->

  </div>
</div>
