<div class="card-container">
  <div class="card">
    <%= link_to profile_path(user), class: "card-link" do %>

      <div class="card-body">

        <!-- Slider main container -->
        <div class="swiper-container swiper-single-card">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->
                <!-- test slide below -->
                <div class="swiper-slide profile-photo" style="background-image: url(<%= image_path user.facebook_picture_url %>);" ></div>
                <!-- end of test slide -->
                <% user.user_images.each do |image| %>
                  <div class="swiper-slide profile-photo" style="background-image: url( <%= image_path image.medium_url %>);" ></div>
                <% end %>
            </div>
            <!-- If we need pagination -->
            <div class="swiper-pagination swiper-pagination-white swiper-single-card"></div>

            <!-- If we need navigation buttons -->
            <!-- <div class="swiper-button-prev swiper-single-card"></div> -->
            <!-- <div class="swiper-button-next swiper-single-card"></div> -->

            <!-- If we need scrollbar -->
            <div class="swiper-scrollbar swiper-single-card"></div>
        </div>

      </div>

      <div class="card-footer">
        <div class="card-footer-content text-left">
            <div><%= "#{user.first_name}, #{user.age}" %></div>
            <div>Classics</div>
        </div>
      </div>

  <% end %>
  </div>
</div>

